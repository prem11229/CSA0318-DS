#include <stdio.h> 
int main() { 
int i, j, rows, cols; 
printf("Enter number of rows and columns: "); 
scanf("%d %d", &rows, &cols); 
int arr[rows][cols]; 
printf("Enter the elements of the matrix:\n"); 
for(i = 0; i < rows; i++) { 
for(j = 0; j < cols; j++) { 
scanf("%d", &arr[i][j]); 
} 
} 
printf("\nSum of each row:\n"); 
for(i = 0; i < rows; i++) { 
int rowSum = 0; 
for(j = 0; j < cols; j++) { 
rowSum += arr[i][j]; 
} 
printf("Row %d = %d\n", i + 1, rowSum); 
} 
printf("\nSum of each column:\n"); 
for(j = 0; j < cols; j++) { 
int colSum = 0; 
for(i = 0; i < rows; i++) { 
colSum += arr[i][j]; 
} 
printf("Column %d = %d\n", j + 1, colSum); 
} 
return 0; 
}
